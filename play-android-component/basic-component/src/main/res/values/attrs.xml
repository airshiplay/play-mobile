<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PlayItemView">
        <attr name="item_title_icon" format="reference" />
        <attr name="item_title" format="string|reference"/>
        <attr name="item_title_size" format="dimension|reference"/>

        <attr name="item_value" format="string|reference|boolean" />
        <attr name="item_value_size" format="dimension|reference" />
        <attr name="item_value_type" format="enum">
            <enum name="text_view" value="0"/>
            <enum name="edit_text" value="1"/>
            <enum name="switch_compat" value="2"/>
        </attr>
        <attr name="item_open_icon" format="reference" />
        <attr name="item_open_show" format="boolean" />
        <attr name="item_divider_color" format="color|reference"/>
        <attr name="item_position" format="enum">
            <enum name="single" value="0"/>
            <enum name="top" value="1"/>
            <enum name="center" value="2"/>
            <enum name="bottom" value="3" />
            <enum name="title" value="4"/>
        </attr>
    </declare-styleable>
</resources>