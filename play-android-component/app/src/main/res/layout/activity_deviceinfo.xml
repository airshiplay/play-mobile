<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <com.airlenet.component.PlayItemView
            android:layout_marginTop="20dp"
            android:id="@+id/sys_brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="设备品牌" />

        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_model"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="设备型号" />
        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:item_title="系统版本" />
        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_sdk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="SDK版本" />





        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_display"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            app:item_title="显示"
            app:item_position="title"/>

        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_density"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="density" />
        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_scaledDensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="scaledDensity" />
        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_densityDpi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="densityDpi" />

        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_widthPixels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="widthPixels" />

        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_heightPixels"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="heightPixels" />
        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="内容区" />
        <com.airlenet.component.PlayItemView
            android:id="@+id/sys_actionBarHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_title="ActionBar" />
    </LinearLayout>
</ScrollView>