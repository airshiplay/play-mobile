<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7722ff"

    android:orientation="vertical">

    <com.airlenet.component.PlayItemView
        android:layout_marginTop="20dp"
        android:id="@+id/item_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:item_title="title"
        app:item_position="top"
        app:item_title_icon="@mipmap/ic_launcher"
        app:item_value="value" />

    <com.airlenet.component.PlayItemView
        android:id="@+id/item_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:item_title="title"
        app:item_position="bottom"
        app:item_title_icon="@mipmap/ic_launcher"
        app:item_value="value" />

    <com.airlenet.component.PlayItemView
        android:layout_marginTop="20dp"
        android:id="@+id/item_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:item_title="title"
        android:clipToPadding="false"
        app:item_position="top"
        app:item_value="value" />
    <com.airlenet.component.PlayItemView
         android:id="@+id/item_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:item_title="title"
        android:clipToPadding="false"
        app:item_position="center"
        app:item_value_type="edit_text"
        app:item_value="value" />
    <com.airlenet.component.PlayItemView
        android:id="@+id/item_deviceInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:item_title="本机信息"
        android:clipToPadding="false"
        app:item_position="bottom" />

</LinearLayout>